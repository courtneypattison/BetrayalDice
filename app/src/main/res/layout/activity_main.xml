    <TextView
        android:id="@+id/player2sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/player2die1"
        app:layout_constraintStart_toStartOf="@+id/player2die1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/player2sum"
        app:layout_constraintStart_toEndOf="@+id/player1sum"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hauntRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="hauntRoll"
        android:text="@string/haunt_roll"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/player2die1"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toEndOf="@+id/player1die1"
        app:layout_constraintTop_toBottomOf="@+id/playerDifference" />

    <TextView
        android:id="@+id/omenCardCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
