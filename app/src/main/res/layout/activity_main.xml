        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/hauntRoll"
        app:layout_constraintStart_toStartOf="@+id/hauntRoll"
        app:layout_constraintTop_toBottomOf="@+id/hauntRoll" />

    <TextView
        android:id="@+id/omenCardCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
