<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/piedra</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Ripple">
        <item name="colorControlHighlight">@color/colorPrimaryFocused</item>
    </style>

    <style name="MaterialAlertDialogCustom" parent="@style/MaterialAlertDialog.MaterialComponents">
        <item name="android:fontFamily">@font/piedra</item>
    </style>

    <style name="MaterialAlertDialogHaunt" parent="MaterialAlertDialogCustom">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

</resources>
